<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_play_icon"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_trailer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@id/iv_play_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_play_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_play_icon"
        tools:text="Movie Name with Trailer link goes here" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/iv_play_icon" />
</android.support.constraint.ConstraintLayout>